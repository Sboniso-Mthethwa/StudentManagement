@{
    ViewBag.Title = "Pass/Fail Chart";
}

<h2 class="center-heading" style="text-align: center; font-family: 'Times New Roman', Times, serif; color: black; font-size: 35px;">Pie Chart showing number of learnrs who Passed and Fail </h2>

@*<canvas id="passFailChart" width="100" height="100"></canvas>*@
<div style="width: 50%; margin: 0 auto; height:400px;">
    <canvas id="passFailChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('passFailChart').getContext('2d');
    var passFailChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Pass', 'Fail'],
            datasets: [{
                label: 'Learners Pass vs Fail',
                data: [@ViewBag.PassCount, @ViewBag.FailCount],
                backgroundColor: ['#36A2EB', '#FF6384'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false, // Allows the chart to adjust based on the container
        }
    });
</script>
